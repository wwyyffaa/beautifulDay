/* pages/confirm/confirm .wxss */

/* <!-- 引用复用模版里的相对路径 --> */
@import "confirm-item/confirm-item-template.wxss";

/* 头部 */

.confirm-container {
  display: flex;
  width: 100%;
  flex-direction: column;
  background-color: #f8f8f8;
  margin-bottom: 50px;
}

.confirm-nav {
  height: 40px;
  line-height: 40px;
  width: 100%;
  color: #4a4a4a;
}

.confirm-nav .confirm-innav {
  font-size: 32rpx;
  width: 95%;
  margin: 0px auto;
}

view {
  display: flex;
  flex-direction: column;
}

/* 中间主体 */

.mian-text {
  background-color: #fff;
}

/* 底部 */

.confirm-button-outbox {
  display: block;
  clear: both;
  width: 100%;
  height: 50px;
  background-color: #eee;
  position: fixed;
  bottom: 0px;
  right: 0px;
}

.confirm-button {
  display: block;
  float: right;
  width: 200rpx;
  height: 100%;
  line-height: 50px;
  background-color: #f01a15;
  color: #fff;
  text-align: center;
}

.button-money {
  display: block;
  float: right;
  line-height: 50px;
  font-size: 32rpx;
  margin: 0rpx 10rpx;
}

.money-big {
  color: #f01a15;
  font-size: 56rpx;
}
